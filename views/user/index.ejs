<script>
function MyCtrl($scope) {
  $scope.action = function() {
    $scope.txt = 'OK';
  }
 
  $scope.txt = 'World';
};


function DataCtrl($scope) {
  $scope.users = [
    {'name': 'name1', 'email': 'email1'},
    {'name': 'name2', 'email': 'email2'},
    {'name': 'name3', 'email': 'email3'},
  ];
};

</script>


<h1>Listing users</h1>
<table ng-controller="DataCtrl">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan='3'></th>
   </tr>
   <tr ng-repeat="user in users">
     <td>{{user.name}}</td>
     <td></td>
     <td></td>
     <td></td>
     <td></td>
   </tr>

  <% _.each(model, function (user) { %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><a href="/user/show/<%= user.id %>">Show</a></td>
    <td><a href="/user/edit/<%= user.id %>">Edit</a></td>
     <td><a href="/user/destroy/<%= user.id %>">Delete</a></td>
  <% }) %>
  </tr>
</table>
<div ng-controller="MyCtrl">
      Hello {{txt}}!
      <button ng-click="action()">
        OK
      </button>
    </div>
<br />
<a href="/user/new">New User</a>