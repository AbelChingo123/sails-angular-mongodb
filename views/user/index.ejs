<script type="text/javascript">
  'use strict';

var appDemoCrud = angular.module('appDemoCrud', []);
//user angular
appDemoCrud.controller('UserListCtrl', function UserListCtrl($scope) {
  $scope.users = [
    {'id':'0001',
     'name': 'name21',
     'email': 'email41'},
    {'id':'0002',
    'name': 'name32',
     'email': 'email52'},
    {'id':'0003',
    'name': 'name3',
     'email': 'email1'}
  ];
  $scope.orderProp = 'name';
});</script>
<h1>Listing users</h1>
<div ng-controller="UserListCtrl">
<table style='width: 760px; margin: auto;' >
  <tr>
    <td style='text-align:right'><strong>Search :</strong></td>
    <td colspan='4' style='text-align:left'><input ng-model="query"></td>
    <td >
    Order by
     <select ng-model="orderProp">
          <option value="name">Name</option>
          <option value="email">Email</option>
          <option value="id">Code</option>
        </select>
    </td>
  </tr>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan='3'>Actions</th>
  </tr>
  <tr ng-repeat="user in users | filter:query | orderBy:orderProp">
     <td>{{user.name}}</td>
     <td>{{user.email}}</td>
      <td><a href="/user/show/{{user.id}}">Show</a></td>
    <td><a href="/user/edit/{{user.id}}">Edit</a></td>
     <td><a href="/user/destroy/{{user.id}}">Delete</a></td>
  </tr>

  <% _.each(model, function (user) { %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><a href="/user/show/<%= user.id %>">Show</a></td>
    <td><a href="/user/edit/<%= user.id %>">Edit</a></td>
    <td><a href="/user/destroy/<%= user.id %>">Delete</a></td>
  </tr>
  <% }) %>
 
</table>
<div>
